<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <!--MySQL database aka dragon.kent.ac.uk-->
    <!--Use Java Transaction API-->
    <!--<persistence-unit name="dragon.kent.ac.uk" transaction-type="JTA">-->
    <persistence-unit name="dragon.kent.ac.uk" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!--Turns out persistence classes need to be declared here as well-->

        <!--Records-->
        <class>uk.ac.kent.models.records.BaseRecord</class>
        <class>uk.ac.kent.models.records.ProbationRecord</class>
        <class>uk.ac.kent.models.records.SalaryIncreaseRecord</class>
        <class>uk.ac.kent.models.records.PersonalDetailsRecord</class>
        <class>uk.ac.kent.models.records.EmploymentDetailsRecord</class>
        <class>uk.ac.kent.models.records.AnnualReviewRecord</class>

        <!--Recommandations-->
        <class>uk.ac.kent.models.records.recommendations.BaseRecommendation</class>
        <class>uk.ac.kent.models.records.recommendations.ProbationRecommendation</class>
        <class>uk.ac.kent.models.records.recommendations.PromotionRecommendation</class>
        <class>uk.ac.kent.models.records.recommendations.RemainRecommendation</class>
        <class>uk.ac.kent.models.records.recommendations.SalaryIncreaseRecommendation</class>
        <class>uk.ac.kent.models.records.recommendations.TerminationRecommendation</class>

        <!--Other-->
        <class>uk.ac.kent.models.other.Address</class>

        <!--Yuconz-->
        <class>uk.ac.kent.models.yuconz.Department</class>
        <class>uk.ac.kent.models.yuconz.Position</class>

        <!--People-->
        <class>uk.ac.kent.models.people.Employee</class>
        <class>uk.ac.kent.models.people.Director</class>
        <class>uk.ac.kent.models.people.Manager</class>
        <class>uk.ac.kent.models.people.Relative</class>

        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>

            <!--I am using my credentials - Norbert-->
            <!--database URI is protocol://host:port/database-->
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://dragon.kent.ac.uk:3306/nl253"/>

            <property value="100" name="connection.pool_size"/>

            <property name="javax.persistence.jdbc.user" value="nl253"/>
            <property name="javax.persistence.jdbc.password" value="ngan-dt"/>

            <!--Hibernate properties-->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.connection.autocommit" value="false"/>
            <!--<property name="hibernate.hbm2ddl.auto" value="update"/>-->

        </properties>

    </persistence-unit>

