<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.example</groupId>
  <artifactId>Software-Engineering-Project</artifactId>
  <name>Software Engineering Project</name>
  <version>0.1.0-SNAPSHOT</version>
  <prerequisites>
    <maven>[3.0.0,)</maven>
  </prerequisites>
  <inceptionYear>2017</inceptionYear>
  <contributors>
    <contributor>
      <name>Norbert Logiewa</name>
      <email>nl253@kent.ac.uk</email>
      <organization>Kent Univerity</organization>
      <roles>
        <role>coding</role>
      </roles>
    </contributor>
    <contributor>
      <name>charlotte</name>
      <email>charlotte</email>
      <organization>Kent Univerity</organization>
      <roles>
        <role>UML</role>
        <role>coding</role>
      </roles>
    </contributor>
    <contributor>
      <name>Bradley</name>
      <email>to be filled in</email>
      <organization>Kent Univerity</organization>
      <roles>
        <role>documentation</role>
        <role>UML</role>
      </roles>
    </contributor>
    <contributor>
      <name>Imaan Fakim</name>
      <email>if50@kent.ac.uk</email>
      <organization>Kent Univerity</organization>
      <roles>
        <role>management</role>
        <role>documentation</role>
        <role>UML</role>
        <role>reports</role>
      </roles>
    </contributor>
  </contributors>
  <licenses>
    <license>
      <name>MIT</name>
    </license>
  </licenses>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.0.1</version>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.7.0</version>
        <configuration>
          <fork>true</fork>
          <meminitial>128m</meminitial>
          <maxmem>512m</maxmem>
          <source>${java.version}</source>
          <target>${java.version}</target>
          <compilerArgs>
            <arg>-Xlint:all</arg>
            <arg>-Xdoclint:all</arg>
          </compilerArgs>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>3.0.0-M1</version>
        <configuration>
          <author>true</author>
          <validateLinks>true</validateLinks>
          <doctitle>${project.basedir}</doctitle>
          <footer>Copyright ${project.artifactId} ${inceptionYear}</footer>
          <header>API documentation for ${project.artifactId}</header>
          <locale>en_GB</locale>
          <nodeprecated>true</nodeprecated>
          <doclint>all</doclint>
          <overview>${project.basedir}/README.md</overview>
          <show>private</show>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.zenjava</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>8.8.3</version>
        <configuration>
          <mainClass>main.java.uk.ac.kent.Main</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>uk.ac.kent.Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <configuration>
          <archive>
            <manifestFile>${project.basedir}/META-INF/MANIFEST.MF</manifestFile>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <java.version>1.8</java.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

