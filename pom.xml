    <prerequisites>
        <maven>[3.0.0,)</maven>
    </prerequisites>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.8</java.version>
    </properties>

    <licenses>
        <license>
            <name>MIT</name>
        </license>
    </licenses>

