<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.example</groupId>
    <artifactId>Software-Engineering-Project</artifactId>
    <version>0.1.0-SNAPSHOT</version>

    <inceptionYear>2017</inceptionYear>

    <name>Software Engineering Project</name>

    <prerequisites>
        <maven>[3.0.0,)</maven>
    </prerequisites>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.8</java.version>
    </properties>

    <licenses>
        <license>
            <name>MIT</name>
        </license>
    </licenses>

    <contributors>
        <contributor>
            <email>nl253@kent.ac.uk</email>
            <name>Norbert Logiewa</name>
            <organization>Kent Univerity</organization>
            <roles>
                <role>coding</role>
            </roles>
        </contributor>
        <contributor>
            <email>charlotte</email>
            <name>charlotte</name>
            <organization>Kent Univerity</organization>
            <roles>
                <role>documentation</role>
                <role>UML</role>
                <role>coding</role>
                <role>reports</role>
            </roles>
        </contributor>
        <contributor>
            <email>if50@kent.ac.uk</email>
            <name>Imaan Fakim</name>
            <organization>Kent Univerity</organization>
            <roles>
                <role>Management</role>
                <role>documentation</role>
                <role>UML</role>
                <role>reports</role>
            </roles>
        </contributor>
    </contributors>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.0.1</version>
            </plugin>

            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
                <configuration>
                    <fork>true</fork>
                    <meminitial>128m</meminitial>
                    <maxmem>512m</maxmem>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <compilerArgs>
                        <arg>-Xlint:all</arg>
                        <arg>-Xdoclint:all</arg>
                    </compilerArgs>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.0.0-M1</version>
                <configuration>
                    <author>true</author>
                    <validateLinks>true</validateLinks>
                    <doctitle>${project.basedir}</doctitle>
                    <footer>
                        Copyright ${project.artifactId} ${inceptionYear}
                    </footer>
                    <header>API documentation for ${project.artifactId}</header>
                    <locale>en_GB</locale>
                    <nodeprecated>true</nodeprecated>
                    <doclint>all</doclint>
                    <overview>${project.basedir}/README.md</overview>
                    <show>private</show>
                </configuration>
            </plugin>

            <plugin>
                <groupId>com.zenjava</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>8.8.3</version>
                <configuration>
                    <mainClass>main.java.uk.ac.kent.Main</mainClass>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.0.2</version>
                <configuration>
                    <archive>
                        <manifestFile>
                            ${project.basedir}/META-INF/MANIFEST.MF
                        </manifestFile>
                    </archive>
                </configuration>
            </plugin>

        </plugins>
    </build>
</project>
